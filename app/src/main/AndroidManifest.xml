<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cocktails">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:name=".Cocktails"
        android:allowBackup="false"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:replace="android:supportsRtl, android:allowBackup"
        tools:targetApi="q">
        <activity android:name=".CustomItem.UserItemLevel3"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppUserTheme"
            android:parentActivityName=".CustomItem.UserItemLevel2" />
        <activity
            android:name=".CustomItem.insertIngredients.SelectIngredient"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".CustomItem.AddIngredientItem" />
        <activity
            android:name=".CustomItem.insertIngredients.SelectUnit"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".CustomItem.AddIngredientItem" />
        <activity
            android:name=".CustomItem.AddIngredientItem"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".CustomItem.UserItemLevel2" />
        <activity
            android:name=".CustomItem.UserItemLevel2"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".CustomItem.UserItemLevel1" />
        <activity
            android:name=".CustomItem.CocktailIconLevel1"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".CustomItem.UserItemLevel1" />
        <activity
            android:name=".ScrollingActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:theme="@style/AppTheme.Splash"
            android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomItem.UserItemLevel1"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".ScrollingActivity" />
        <activity
            android:name=".ItemDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_item_details_activity"
            android:parentActivityName=".ScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ContactUsActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
    </application>

</manifest>