<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorText</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/actionBarTitleBeforeCollapsing</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/paytone_one</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- App action bar title: before collapsing -->
    <style name="TextAppearance.Design.CollapsingToolbar.Expanded" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/actionBarTitleBeforeCollapsing</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/paytone_one</item>
    </style>

    <!-- App action bar title: after collapsing -->
    <style name="TextAppearance.Widget.AppCompat.Toolbar.Title." parent="android:TextAppearance">
        <item name="android:textSize">@dimen/actionBarTitleAfterCollapsing</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/paytone_one</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/actionBarTitleAfterCollapsing</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/paytone_one</item>
    </style>

    <style name="TextAppearance.Design.Tab." parent="android:TextAppearance">
        <item name="android:textSize">@dimen/headerFontSize</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/raleway_light</item>
    </style>

    <!-- List item header -->
    <style name="list_item_header">
        <item name="android:textSize">@dimen/headerFontSize</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/raleway_light</item>
    </style>

    <!-- List item text -->
    <style name="list_item_text">
        <item name="android:textSize">@dimen/textFontSize</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/raleway_light</item>
    </style>

    <style name="Regular" parent="android:TextAppearance">
        <item name="font">@font/paytone_one</item>
    </style>

    <style name="Text14Reg">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/colorRipple</item>
        <item name="android:textAppearance">@style/Regular</item>
        <item name="font">@font/raleway_light</item>
    </style>

    <style name="simpletooltip_default" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/textFontSize</item>
        <item name="font">@font/raleway_light</item>
    </style>


</resources>


