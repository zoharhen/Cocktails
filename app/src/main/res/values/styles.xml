<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- App action bar title: before collapssing -->
    <style name="TextAppearance.Design.CollapsingToolbar.Expanded" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/actionBarTitleBeforeCollapsing</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/abeezee</item>
    </style>

    <!-- App action bar title: after collapssing -->
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/actionBarTitleAfterCollapsing</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/abeezee</item>
    </style>

    <!-- List item header -->
    <style name="list_item_header">
        <item name="android:textSize">@dimen/headerFontSize</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/abeezee</item>
    </style>

    <!-- List item text -->
    <style name="list_item_text">
        <item name="android:textSize">@dimen/textFontSize</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/abeezee</item>
    </style>

</resources>
