<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipe_item"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="false"
    android:paddingTop="100dp"
    android:layout_above="@android:id/tabs"
    android:background="@color/recipeTabBg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:padding="20dp"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:id="@+id/iv_cocktail"
            app:shape_mode="circle"
            app:stroke_color="#009688"
            app:stroke_width="3dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="@dimen/space8"
            android:scaleType="fitXY"
            android:contentDescription="TODO" />

        <LinearLayout
            android:id="@+id/ll_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space16"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/favoriteAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:paddingLeft="@dimen/space24"
                android:paddingRight="@dimen/space24"
                android:contentDescription="TODO" />

            <View
                android:layout_width="1.5dp"
                android:layout_height="@dimen/space8"
                android:background="@color/colorRipple" />

            <ImageButton
                android:id="@+id/editAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:visibility="gone"
                android:src="@drawable/ic_edit_black_24dp"
                android:paddingLeft="@dimen/space24"
                android:paddingRight="@dimen/space24"
                android:contentDescription="TODO" />

            <View
                android:id="@+id/editActionSeparator"
                android:layout_width="1.5dp"
                android:visibility="gone"
                android:layout_height="@dimen/space8"
                android:background="@color/colorRipple" />

            <ImageButton
                android:id="@+id/deleteAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:visibility="gone"
                android:src="@drawable/ic_delete_black_24dp"
                android:paddingLeft="@dimen/space24"
                android:paddingRight="@dimen/space24"
                android:contentDescription="TODO" />

            <View
                android:id="@+id/deleteActionSeparator"
                android:layout_width="1.5dp"
                android:layout_height="@dimen/space8"
                android:visibility="gone"
                android:background="@color/colorRipple" />

            <ImageButton
                android:id="@+id/tts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:src="@drawable/ic_play_circle_outline_black_24dp"
                android:paddingLeft="@dimen/space24"
                android:paddingRight="@dimen/space24"
                android:contentDescription="TODO" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/space8"
                android:background="@color/colorRipple" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:src="@drawable/ic_share_black_24dp"
                android:paddingLeft="@dimen/space24"
                android:paddingRight="@dimen/space24"
                android:contentDescription="TODO" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space16"
            android:text="@string/ingredients"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/h2" />

        <TextView
            android:id="@+id/ingredientContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/Text14Reg"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/space16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:background="@color/colorRipple" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space16"
            android:text="@string/preparation"
            android:id="@+id/preparationSection"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/h2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPreparation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false" />

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="15dp"
                    android:background="@color/colorRipple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WELL DONE"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space8"
                    android:text="You did it! Let your friend know about it!" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space8"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        android:src="@drawable/ic_favorite_empty" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        android:src="@drawable/ic_favorite_empty" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        android:src="@drawable/ic_favorite_empty" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        android:src="@drawable/ic_favorite_empty" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>